<div class="container">
  <div class="page-header">
    <h1 class="page-title">
      <%= gettext("Influencers") %>
      <span style="color:#376ee7;">
        >
        <%= @influencer.name %>
      </span>
    </h1>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <div class="card text-center">
        <div class="card-body">
          <img src="" style="display: block;">
          <%= @influencer.name %>

        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <%= gettext("Influencer information") %>
        </div>
        <div class="card-body">
          <div class="info-field">
            <div class="text-muted">
              <%= gettext("Name") %>
            </div>
            <div>
              <%= @influencer.name %>
            </div>
          </div>

          <div class="info-field">
            <div class="text-muted">
              <%= gettext("Address") %>
            </div>
            <div>
              <%= @influencer.address %>
            </div>
          </div>

          <div class="info-field">
            <div class="text-muted">
              <%= gettext("Contact") %>
            </div>
            <div>
              <%= @influencer.contact %>
            </div>
          </div>

           <div class="info-field">
            <div class="text-muted">
              <%= gettext("Brands") %>
            </div>
            <div>
              <%= get_brands(@influencer) %>
            </div>
          </div>

         
        </div>
      </div>
    

      <div class="card">
        <div class="card-header">
          <%= gettext("Contract information") %>
        </div>
        <div class="card-body">
          <div class="info-field">
            <div class="text-muted">
              <%= gettext("Points") %>
            </div>
            <div>
               <%= @contract.points %>
            </div>
          </div>

          <div class="info-field">
            <div class="text-muted">
              <%= gettext("Format") %>
            </div>
            <div>
              TODO
            </div>
          </div>

          <div class="info-field">
            <div class="text-muted">
              <%= gettext("Creation Date") %>
            </div>
            <div>
              <%= format_date(@contract.inserted_at) %>
            </div>
          </div>         
        </div>
      </div>
    </div>

    <div class="col-sm-9">
      <div class="row">
        <div class="col-sm-6">
          <div class="card statistics">
            <div class="card-body pending">
              <div>
                <%= get_pending(@influencer) %> €
              </div>
              <%= gettext("Rewards pending") %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card statistics">
            <div class="card-body rewarded">
              <div>
                <%= get_rewarded(@influencer) %> €
              </div>
              <%= gettext("Rewarded") %>
            </div>
          </div>
        </div>

        <div class="col-sm-12">
          <div class="card">
            <div class="card-body">
              TODO
            </div>
          </div>
        </div>

      </div>
    </div>
    
  </div>
</div>
