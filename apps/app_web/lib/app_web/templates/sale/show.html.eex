<h2>Show Sale</h2>

<ul>

  <li>
    <strong>Date:</strong>
    <%= @sale.date %>
  </li>

  <li>
    <strong>Value:</strong>
    <%= @sale.value %>
  </li>

  <li>
    <strong>Contract ID:</strong>
    <%= @sale.contract_id %>
